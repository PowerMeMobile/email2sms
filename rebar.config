{erl_opts, [
    warn_export_all,
    warn_missing_spec,
    %warnings_as_errors,
    debug_info
]}.
{xref_checks, [
    undefined_function_calls,
    deprecated_function_calls,
    locals_not_used
]}.
{sub_dirs, ["rel"]}.
{deps, [
    {alley_services, ".*", {git, "https://github.com/PowerMeMobile/alley_services.git", {branch, "master"}}},
    {bstr, ".*", {git, "https://github.com/jcomellas/bstr.git", {tag, "v0.2.0"}}},
    {gen_smtp, ".*", {git, "https://github.com/Vagabond/gen_smtp.git", "fb667c6"}},
    {eiconv, ".*", {git, "https://github.com/zotonic/eiconv.git", "644fb5e7"}},
    %% support deps
    {entop, "0.0.1", {git, "https://github.com/mazenharake/entop.git", {branch, "master"}}},
    {eper, ".*", {git, "https://github.com/massemanet/eper.git", {branch, "master"}}},
    {recon, ".*", {git, "https://github.com/ferd/recon.git", {tag, "2.2.0"}}}
]}.
{eunit_opts, [verbose]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
