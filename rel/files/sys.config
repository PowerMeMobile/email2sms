[
{email2sms, [
    {smtp_addr, {0,0,0,0}},
    {smtp_port, 2525},
    {smtp_protocol, tcp},
    {smtp_domains, ["sms.provider.com"]},
    {smtp_greeting, "Email-2-SMS Gateway"},
    {smtp_max_session_count, 20},
    {smtp_max_msg_size, 1048576}, %% bytes | undefined

    {address_fields_supported, ["to", "cc", "bcc"]},
    % {throttling_hourly_limit, 5}
    % {max_recipient_per_message, 1},
    {authentication_schema, [from_address]}, % [to_address, subject]
    {invalid_recipient_policy, ignore_invalid} % | reject_massage
]},
{alley_services, [
    {just_gateway_queue_fmt,      <<"pmm.alley.just.gateway.%id%">>},
    {incoming_sms_queue,          <<"pmm.alley.email2sms.incoming.sms">>},
    {kelly_sms_request_queue,     <<"pmm.alley.kelly.request.sms">>},
    {kelly_sms_request_deferred_queue, <<"pmm.alley.kelly.request.sms.deferred">>},
    {kelly_api_queue,             <<"pmm.alley.kelly.api">>},
    {kelly_auth_queue,            <<"pmm.alley.kelly.auth">>},
    {kelly_events_exchange,       <<"pmm.alley.kelly.events">>},
    {kelly_events_listener_queue, <<"pmm.alley.kelly.events.listener.email2sms">>},
    {kelly_events_handler,        alley_services_events_handler},
    {http_log_level, debug}, % none | info | debug
    {http_log_size, 10000000},
    {pdu_log_level, none}, % none | debug
    {pdu_log_size, 10000000},
    {country_code, <<"961">>},
    {strip_leading_zero, false},
    {bulk_threshold, 100}
]},
{rmql, [
    {amqp_props, [
        {host, "192.168.33.10"},
        {port, 5672},
        {username, <<"alley">>},
        {password, <<"alley">>},
        {vhost, <<"/">>},
        {qos, 100}
    ]},
    {survive, true},
    {rpc_timeout, 30000}
]},
{lager, [
    {handlers, [
        {lager_console_backend, info},
        {lager_file_backend, [
            {"log/debug.log", debug, 10485760, "$D0", 5},
            {"log/error.log", error, 10485760, "$D0", 5},
            {"log/info.log", info, 10485760, "$D0", 5}
        ]}
    ]},
    {crash_log, "log/crash.log"},
    {crash_log_msg_size, 65536},
    {crash_log_size, 10485760},
    {crash_log_date, "$D0"},
    {crash_log_count, 5},
    {error_logger_redirect, true}
]}
].
